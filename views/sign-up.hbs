<div class="form-style">
<form action="/authentication/sign-up" method="POST" enctype="multipart/form-data">
  <label for="input-username">Username</label>
  <input type="text" name="username" placeholder="Your username" id="input-username" />
  
  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" />
  
  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" />
  
   <label for="picture">Picture</label>
  <input type="file" accept="image/*" id="picture" name="picture"> 
  
  <label for="bio">About you</label>
  <textarea name="bio" id="bio" placeholder="A brief description about yourself" maxlength="200"></textarea>
  
  <button>Sign Up</button>
</form>
</div>

